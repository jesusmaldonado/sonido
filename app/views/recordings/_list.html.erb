<% class_definer = recording.recording_type %>
  <li>
    <ul class="<%= class_definer %>">
      <li class="<%= class_definer %>attribute"> Title: <%= recording.title %>  </li>
      <li class="<%= class_definer %>attribute"> Made at: <%= recording.created_at %>  </li>
      <li class="<%= class_definer  %>attribute"> Description: <%= recording.description %> </li>
      <%= button_to "Edit " + recording.title, edit_recording_url(recording), method: :get %>
      <%= button_to "Add a new song to "+ recording.title, new_song_url(recording_id: recording.id), method: :get %>
      <% if !recording.songs.empty? %>
          <li class="<%= class_definer %>"> Songs:
            <ul class="songs">
              <%= render partial: "song", collection: recording.songs, as: "song" %>
            </ul>
          </li>
      <% end %>
    </ul>
  </li>
